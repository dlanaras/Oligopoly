<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".InGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teamANameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/playerANameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/playerAPositionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <View
                    android:id="@+id/playerAPositionColor"
                    android:layout_width="30dp"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/playerBNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/playerBPositionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <View
                    android:id="@+id/playerBPositionColor"
                    android:layout_width="30dp"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/teamABalanceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/teamAPropertyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Properties:" />

                <TextView
                    android:id="@+id/teamAPropertiesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/board"
                    android:layout_width="397dp"
                    android:layout_height="364dp"
                    android:layout_weight="3"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dice2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="end"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/dice1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="start"
                        tools:srcCompat="@tools:sample/avatars" />
                </LinearLayout>

                <Button
                    android:id="@+id/diceRollButton"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#00FFA3"
                    android:onClick="rollDice"
                    android:text="Roll Dice"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teamBNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/playerCNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/playerCPositionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <View
                    android:id="@+id/playerCPositionColor"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/playerDNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/playerDPositionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <View
                    android:id="@+id/playerDPositionColor"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/teamBBalanceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/teamBPropertyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Properties" />

                <TextView
                    android:id="@+id/teamBPropertiesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>